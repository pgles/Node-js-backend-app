<div class="container">
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form action="/jobs/create" method="post">
          <div class="form-group">
              <input type="text" name="position" class="form-control" placeholder="Job Name" />
          </div>
          <div class="form-group">
              <input type="text" name="company" class="form-control" placeholder="Company Name" />
          </div>
           <div class="form-group">
              <button class="btn btn-info">Save Job</button>
          </div>
      </form>
    </div>
  </div>
</div>